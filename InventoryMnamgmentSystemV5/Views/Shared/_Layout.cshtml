            <div style="text-align: center">
                <img style="" src="~/Media/911.png" />
                <h2 class="h6 pt-4 pb-3 mb-4 border-bottom" style="font-size:12px">
                    @Html.ActionLink("الصفحة الرئيسية", "Index", "Home")
                </h2>
            </div>
            <nav class="" id="toc" style="width:200px">

                <ul class="list-unstyled">

                    <li class="my-2">
                        <button class="btn d-inline-flex align-items-center collapsed" data-bs-toggle="collapse" aria-expanded="false" data-bs-target="#contents-collapse" aria-controls="contents-collapse"
