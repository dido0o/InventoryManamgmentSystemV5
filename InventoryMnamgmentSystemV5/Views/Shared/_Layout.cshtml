                        </button>
                        <ul class="list-unstyled ps-3 collapse" id="components-collapse">
                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink("العناصر والمستخدمين", "Report", "UsersItems", null, new { @style = "font-size:10px" })</a></li>
                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink("جميع العناصر", "Report", "Items", null, new { @style = "font-size:12px" })</a></li>
                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink("تاريخ العناصر", "Report", "ItemHistories", null, new { @style = "font-size:12px" })</a></li>
                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink("جميع الموظفين", "Report", "AgencyUserMappings", null, new { @style = "font-size:12px" })</a></li>
                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink("العناصر المنقولة", "Report", "IMovingItems", null, new { @style = "font-size:12px" })</a></li>
                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink("العناصر حسب المستودع", "Report", "StoreItems", null, new { @style = "font-size:12px" })</a></li>
                        </ul>
                    </li>

