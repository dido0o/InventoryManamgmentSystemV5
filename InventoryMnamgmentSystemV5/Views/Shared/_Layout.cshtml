                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink("مخزن جديد", "Create", "Stores", null, new { @style = "font-size:12px" })</a></li>
                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink("حالة جديدة", "Create", "IStatus", null, new { @style = "font-size:12px" })</a></li>
                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink("علامة تجارية جديدة", "Create", "IBrands", null, new { @style = "font-size:12px" })</a></li>
                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink("نوع جديد", "Create", "ITypes", null, new { @style = "font-size:12px" })</a></li>
