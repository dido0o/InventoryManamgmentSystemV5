                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink("إدارة العناصر", "Index", "Items", null, new { @style = "font-size:12px" })</a></li>
                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink("إدارة الموظفين", "Index", "VUsers", null, new { @style = "font-size:12px" })</a></li>
                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink(" إدارة العناصر المنقولة", "Index", "IMovingItems", null, new { @style = "font-size:12px" })</a></li>
                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink(" إدارة العناصر المعادة", "Index", "IReturnItems", null, new { @style = "font-size:12px" })</a></li>
