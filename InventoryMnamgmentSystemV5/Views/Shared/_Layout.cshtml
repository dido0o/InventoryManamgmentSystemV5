                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink("إدارة العلامات التجارية", "Index", "IBrands", null, new { @style = "font-size:12px" })</a></li>
                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink("إدارة الموظفين وإداراتهم", "Index", "AgencyUserMappings", null, new { @style = "font-size:12px" })</a></li>
                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink(" إدارة الحالات", "Index", "IStatus", null, new { @style = "font-size:12px" })</a></li>
                            <li><a class="d-inline-flex align-items-center rounded">@Html.ActionLink(" إدارة الأنواع", "Index", "ITypes", null, new { @style = "font-size:10px" })</a></li>
