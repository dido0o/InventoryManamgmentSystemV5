@model InventoryMnamgmentSystemV5.Models.Items

@{
    ViewBag.Title = "Create";
}

<h2>اضافة عنصر</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>Items</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="margin:7px">
            <h5>الرقم التسلسلي</h5>
            <div class="">
                @Html.EditorFor(model => model.ISerialNum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ISerialNum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-right:7px; margin-top:20px">
            <h5>النوع</h5>
            <div class="">
                @Html.DropDownList("ItemTypeId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ItemTypeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-right:7px; margin-top:20px">
            <h5>العلامة التجارية</h5>
            <div class="">
                @Html.DropDownList("ItemBrandId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ItemBrandId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-right:7px; margin-top:20px">
            <h5>حالة العنصر</h5>
            <div class="">
                @Html.DropDownList("IStatusID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IStatusID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-right:7px; margin-top:20px">
            <h5>المستودع</h5>
            <div class="">
                @Html.DropDownList("IStore", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IStore, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-top:7px">
                <input type="submit" value="اضافة" class="btn btn-default" style="border-color:#808080"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("الصفحة الرئيسية", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
