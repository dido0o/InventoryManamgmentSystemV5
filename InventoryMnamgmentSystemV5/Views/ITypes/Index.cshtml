@model IEnumerable<InventoryMnamgmentSystemV5.Models.IType>

@{
    ViewBag.Title = "Index";
}

<h2>أنواع العناصر</h2>

<div>
    <p>
        @Html.ActionLink("اضافة نوع", "Create")
    </p>
    <form>
        النوع: <input type="text" name="searchString"/>
        <input type="submit" value="بحث"/>
    </form>
</div>
<table class="table">
    <tr>
        <th>
            <h3>النوع</h3>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ITypeName)
            </td>
            <td>
                @Html.ActionLink("تعديل", "Edit", new { id = item.TypeId }) |
                @Html.ActionLink("تفاصيل", "Details", new { id = item.TypeId }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.TypeId })
            </td>
        </tr>
    }

</table>
