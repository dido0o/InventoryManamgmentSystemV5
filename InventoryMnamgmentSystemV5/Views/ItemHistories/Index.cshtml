@model IEnumerable<InventoryMnamgmentSystemV5.Models.ItemHistory>

@{
    ViewBag.Title = "Index";
}

<h2>تاريخ العناصر</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<form style="display:inline-block; margin:5px">
    الرقم التسلسلي: <input type="text" name="searchString"/>
    <input type="submit" value="بحث"/>
</form>

<table class="table">
    <tr>
        <th>
            <h3>الرقم التسلسلي</h3>
        </th>
        <th>
            <h3>اسم المستخدم</h3>
        </th>
        <th>
            <h3>حالة العهدة</h3>
        </th>
        <th>
            <h3>التاريخ والوقت</h3>
        </th>
        <th>
            <h3>ملاحظات</h3>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Items.ISerialNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VUsers.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IStatus.StatusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.RecordId }) |
                    @Html.ActionLink("Details", "Details", new { id=item.RecordId }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.RecordId })
                </td>*@
        </tr>
    }

</table>
