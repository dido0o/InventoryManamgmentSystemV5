@model IEnumerable<InventoryMnamgmentSystemV5.Models.IStatus>

@{
    ViewBag.Title = "Index";
}

<h2>حالات العناصر</h2>

<div>
    <p style="display:inline-block">
        @Html.ActionLink("اضافة حالة", "Create")
    </p>

    <form asp-controller="IStatus" asp-action="Index" style="display:inline-block; margin-right:80px">
        <p>
            اسم الحالة: <input type="text" name="searchString" />
            <input type="submit" value="بحث" />
        </p>
    </form>
</div>

<table class="table">
    <tr>
        <th>
            <h3>الحالة</h3>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StatusName)
        </td>
        <td>
            @Html.ActionLink("تعديل", "Edit", new { id=item.StatusID }) |
            @Html.ActionLink("تفاصيل", "Details", new { id=item.StatusID }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.StatusID })
        </td>
    </tr>
}

</table>
